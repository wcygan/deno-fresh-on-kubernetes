{
  "tasks": {
    "docs": "cd docs && bun start",
    "dev": "cd frontend && deno task dev",
    "k8s:apply": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "skaffold:run": "skaffold run",
    "skaffold:dev": "skaffold dev --port-forward",
    "skaffold:dev-local": "skaffold dev -p dev --port-forward",
    "skaffold:debug": "skaffold debug --port-forward",
    "skaffold:build": "skaffold build",
    "skaffold:deploy": "skaffold deploy",
    "skaffold:render": "skaffold render",
    "skaffold:test": "skaffold test",
    "skaffold:verify": "skaffold verify",
    "up": "skaffold dev -p dev --port-forward",
    "down": "skaffold delete",
    "build": "skaffold build --push=false",
    "test": "cd frontend && deno task test",
    "convert-to-agents": "deno run --allow-read --allow-write scripts/convert-to-agents-md.ts"
  }
}